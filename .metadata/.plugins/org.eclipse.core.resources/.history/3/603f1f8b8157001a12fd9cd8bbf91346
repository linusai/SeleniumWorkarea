
public class StringsValidation25FebCW {

	public static void main(String[] args) {
		String S= "String";
		String S1= "String";
		String S3= "  This_ is Testing   ";
		// Find the Char at specific place
		System.out.println("To find out the String Character : " + S.charAt(2));
		System.out.println("To find out the String Index : " + S.indexOf('r'));
		System.out.println("To find out the Length : " + S.length());
		System.out.println("To find out the Equals : " + S.equals(S1));
		System.out.println("To find out the Equals Ignore Case : " + S.equalsIgnoreCase(S1));
		System.out.println("To find out the Trim : " + S3.trim());
		System.out.println("To Replace All Characters spaces : " + S3.replaceAll(" ", ""));
		System.out.println("To Replace All _ with back Slash : " + S3.replaceAll("_", "/"));
		
				
				
	}
}
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
				
		
